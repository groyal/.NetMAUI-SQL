<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BeebopNoteApp.Views.UrgentMessage;assembly=BeebopNovu.XPlatProj"
        mc:Ignorable="d"
        x:Class="BeebopNoteApp.Views.UrgentMessage.UrgentMessageView"
        x:DataType="vm:UrgentMessageViewModel"
        Width="450" Height="350"
        MinWidth="350" MinHeight="300"
        Title="{Binding Title}"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Background="#FFF5F5F5">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Image Grid.Row="0"
               Source="avares://BeebopNovu.XPlatProj/Assets/warning_140dp.png"
               HorizontalAlignment="Center"
               Width="64"
               Height="64"
               Margin="0,0,0,15"/>

		<TextBlock Grid.Row="1"
                   Text="{Binding Title}"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#D32F2F"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

		<Grid Grid.Row="2"
              Margin="0,0,0,15">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<TextBlock Grid.Row="0" Grid.Column="0" Text="Subject:" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,5,2"/>
			<TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Subject}" FontWeight="SemiBold" Foreground="#D32F2F" Margin="0,0,0,2"/>

			<TextBlock Grid.Row="1" Grid.Column="0" Text="Priority:" FontWeight="SemiBold" Foreground="#666666" Margin="0,0,5,0"/>
			<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Priority}" Foreground="#D32F2F"/>
		</Grid>

		<TextBlock Grid.Row="3"
                   Text="{Binding ReceivedDate, StringFormat='Received: {0:dd MMM yyyy HH:mm}'}"
                   FontSize="12"
                   Foreground="#757575"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

		<Border Grid.Row="4"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="4"
                Padding="15"
                Margin="0,0,0,20">
			<TextBlock Text="{Binding Message}"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="#333333"
                       TextAlignment="Left"/>
		</Border>

		<Button Grid.Row="5"
                Content="Acknowledge"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="140"
                Height="40"
                Background="#1976D2"
                Foreground="White"
                CornerRadius="4"
                FontSize="14"
                FontWeight="SemiBold"
                Command="{Binding AcknowledgeButtonClickedCommand}">
			<Button.Styles>
				<Style Selector="Button:pointerover /template/ ContentPresenter">
					<Setter Property="Background" Value="#1565C0"/>
				</Style>
				<Style Selector="Button:pressed /template/ ContentPresenter">
					<Setter Property="Background" Value="#0D47A1"/>
				</Style>
			</Button.Styles>
		</Button>
	</Grid>
</Window>